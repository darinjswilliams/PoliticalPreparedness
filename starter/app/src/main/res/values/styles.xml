<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

\
    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">@dimen/text14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppCompat.Election.Subtitle" parent="TextAppearance.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text18sp</item>
    </style>

    <style name="TextAppearance.AppCompat.Voting.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="android:layout_marginTop">@dimen/spacing_super</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="WWWLink.App.Button" parent="TextAppearance.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text14sp</item>
    </style>


</resources>
