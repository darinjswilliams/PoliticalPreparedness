<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start" />


    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Constraint android:id="@id/address_line_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/search_title"/>

        <Constraint android:id="@id/address_line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/address_line_1"/>

        <Constraint android:id="@id/city"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/address_line_2"/>

        <Constraint android:id="@id/state"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/city"
            app:layout_constraintStart_toStartOf="@id/city"
            app:layout_constraintBottom_toBottomOf="@id/city"/>

        <Constraint android:id="@id/zip"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintTop_toBottomOf="@id/city"
            app:layout_constraintStart_toStartOf="parent"/>


        <Constraint android:id="@id/button_search"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/zip" />

        <Constraint android:id="@id/button_location"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="1.0"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/button_search" />

        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/representative_title"
            app:layout_constraintStart_toStartOf="@id/button_location"
            app:layout_constraintBottom_toBottomOf="@id/button_location" />

        <Constraint android:id="@id/representative_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            app:layout_constraintBaseline_toBaselineOf="@id/representative_title"
            app:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/representative_recycler"
            app:touchAnchorSide="middle"/>

    </Transition>

</MotionScene>
