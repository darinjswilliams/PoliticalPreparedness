<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="linear"
        motion:duration="2000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/representative_recycler"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:layout_marginEnd="4dp"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="364dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/representative_recycler"
            motion:layout_constraintTop_toTopOf="@+id/list_placeholder" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/search_title"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/address_line_1"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/address_line_2"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/city"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/state"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/representative_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            />

        <Constraint
            android:id="@id/zip"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/button_search"
           android:alpha="0.0" />

        <Constraint
            android:id="@id/button_location"
            android:alpha="0.0" />

        <Constraint
            android:id="@id/representative_recycler"
            android:alpha="1.0"
            motion:layout_constraintTop_toBottomOf="@id/representative_title"
            android:layout_marginEnd="4dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintVertical_bias="0.0" />


    </ConstraintSet>
</MotionScene>